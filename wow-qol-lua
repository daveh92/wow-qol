local frame = CreateFrame("Frame")
frame:RegisterEvent("CHAT_MSG_WHISPER")

frame:SetScript("OnEvent", function(self, event, msg, sender)
    -- Text in Kleinbuchstaben umwandeln für Vergleich
    local lowerMsg = string.lower(msg)

    -- Prüfen ob die Nachricht "?inv" enthält
    if lowerMsg == "?inv" then
        -- Falls du in keiner Gruppe bist -> direkt einladen
        if not IsInGroup() and not IsInRaid() then
            InviteUnit(sender)
        else
            -- Falls schon in Gruppe, kann man trotzdem versuchen einzuladen
            InviteUnit(sender)
        end
    end
end)
